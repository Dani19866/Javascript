---
interface Props {
    title: string;
    src: ImageMetadata;
    alt: string;
}
const { src, alt, title } = Astro.props

// Components
import Image from "astro/components/Image.astro"

---

<!-- Product Header -->
<div class="relative">
    <h1 class="absolute size-s-2 lg:text-6xl font-extrabold bottom-0 m-4 opacity-100 z-20 text-white">
        {title}
    </h1>
    <div class="absolute h-full w-full bg-black opacity-50 z-10"></div>
    <Image
        src={src}
        alt={alt}
        class="max-h-[679px] w-full object-cover z-0"
    />
</div>