---
// Components
import Image from "astro/components/Image.astro";
import SocialIcon from "./SocialIcon.astro";

// Assets
import oldlogo from "../assets/logo/oldlogo.png";
import instagram from "../assets/icons/instagram.png";
import whatsapp from "../assets/icons/whatsapp.png";

const links = [
    {
        title: "PRODUCTOS",
        type: "title",
        url: "/products",
    },
    {
        title: "Bisagras",
        type: "subtitle",
        url: "/products/bisagras",
    },
    {
        title: "Barras roscadas",
        type: "subtitle",
        url: "/products/barras-roscadas",
    },
    {
        title: "Tuercas",
        type: "subtitle",
        url: "/products/tuercas",
    },
    {
        title: "Abrazaderas",
        type: "subtitle",
        url: "/products/abrazaderas",
    },
    {
        title: "Pletinas perforadas",
        type: "subtitle",
        url: "/products/pletinas-perforadas",
    },
    {
        title: "Cajetines y tapas",
        type: "subtitle",
        url: "/products/cajetines-y-tapas",
    },
    {
        title: "Piezas santa maria",
        type: "subtitle",
        url: "/products/piezas-de-santa-maria",
    },
    {
        title: "Alcayatas para hamaca",
        type: "subtitle",
        url: "/products/alcayatas-para-hamaca",
    },
    {
        title: "Pasadores",
        type: "subtitle",
        url: "/products/pasadores",
    },
    {
        title: "Manillas y asas",
        type: "subtitle",
        url: "/products/manillas-y-asas",
    },
    {
        title: "Artículos de fijación",
        type: "subtitle",
        url: "/products/articulos-de-fijacion",
    },
    {
        title: "Arandelas",
        type: "subtitle",
        url: "/products/arandelas",
    },
    {
        title: "UBICACIÓN",
        type: "title",
        url: "/location",
    },
    {
        title: "CONTACTO",
        type: "title",
        url: "/contact",
    }
];
---

<footer class="w-full border-t border-solid border-opacity-10 border-black bg-white">
    <div class="container w-2/3 m-auto flex flex-col gap-10 py-16">
        <!-- Header and links -->
        <div class="lg:grid lg:grid-cols-3 flex flex-col gap-8">
            <!-- Header -->
            <div class="flex flex-col gap-8">
                <!-- Logo -->
                <div>
                    <Image
                        src={oldlogo}
                        alt="Logo de Metalúrgicas Santos y Santos, fabricante de artículos de construcción"
                        width={50}
                        height={45}
                    />
                </div>

                <!-- Eslogan -->
                <div>
                    <p class="neutral-two-text leading-5">
                        Creando un mundo mejor elaborando los mejores artículos
                        de construcción y ferretería.
                    </p>
                </div>

                <!-- Social media -->
                <div class="flex flex-row gap-4">
                    <SocialIcon src={instagram} alt="instagram logo" />
                    <SocialIcon src={whatsapp} alt="whatsapp logo" />
                </div>
            </div>

            <!-- Links -->
            <div class="flex justify-center lg:col-span-2">
                <ul class="flex flex-col flex-wrap gap-2 md:h-56 2xl:h-40">
                    {
                        links.map((link) => {
                            let content = null;
    
                            if (link.type == "title") {
                                content = <li class="px-2 font-extrabold text-sm"><a href={link.url} rel="noopener noreferrer">{link.title}</a></li>;
                            }else{
                                content = <li class="px-3 text-base w-52"><a href={link.url} rel="noopener noreferrer">{link.title}</a></li>;
                            }
    
                            return <>{content}</>;
                        })
                    }
                </ul>
            </div>
        </div>

        <!-- Copyright -->
        <div
            class="w-full border-t border-solid border-opacity-10 border-black p-4"
        >
            <p class="neutral-two-text] text-center leading-5">
                © 2024 Metalúrgicas Santos y Santos. Todos los derechos
                reservados.
            </p>
        </div>
    </div>
</footer>
